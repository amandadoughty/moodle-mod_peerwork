{{!
    @template mod_peerwork/criterion_start

    Custom form output for criteria and justification in the submissions form.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "criteria":[
            {"criterion":{
                "id":"2",
                "peerworkid":"2",
                "description":"<p>Criteria 1<\/p>",
                "descriptionformat":"1",
                "grade":"-3",
                "weight":"1",
                "sortorder":"0",
                "justif":true,
                "justifcriteria":false,
                "scaleitems":[
                    {"header":"Bad"},
                    {"header":"Medium"},
                    {"header":"Good"}
                ],
                "peers":[
                    {
                        "data-peerid":"629",
                        "namedisplay":"Bob Smith",
                        "scaleitems":[
                            {
                                "srlabel":"Rating 'Bad' for Bob Smith",
                                "attrs":{
                                    "name":"grade_idx_2[629]",
                                    "value":0,
                                    "title":"Rating 'Bad' for Bob Smith"
                                },
                                "label":"Bad"
                            }
                        ]
                    }
                ]
            }
            }
        ]
    }
}}
<div class="mod_peerwork_criteria" data-criterionid="{{ criterion.id }}">
    <div class="mod_peerwork_criteriaheader">
        {{{ criterion.description }}}
    </div>
    <div class="mod_peerwork_criteriaerror text-danger" role="alert">
        {{# str }} pleaseproviderating, mod_peerwork {{/ str }}
    </div>
    <div class="mod_peerwork_criteriarating row">
        <div class="col-md-3"></div>
        <div class="mod_peerwork_scaleheaders col-md-9">
            {{# criterion.scaleitems }}
                <div>
                    {{ header }}
                </div>
            {{/ criterion.scaleitems }}
            {{# criterion.justif }}
                {{# criterion.justifcriteria }}
                    <div>
                        {{# str }} justification, mod_peerwork {{/ str }}
                    </div>
                {{/ criterion.justifcriteria }}
            {{/ criterion.justif }}
        </div>
        <div class="mod_peerwork_peers col-md-12">
